<div class="new-task-form-container">
  <h1>Create new Task</h1>

  <%= form_for(@task) do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :details %>
    <%= f.text_field :details %>
    <%= f.submit %>
  <% end %>

  <div class="back-to-list">
    <%= link_to "Back to list", tasks_path %>
  </div>
</div>
